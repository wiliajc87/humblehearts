<div class="media">
  <h2 class="hide-for-large-up">Media</h2>
  <% @category_hash.each do |key, value| %>
    <div class="media-card">
    <h2><%= key %></h2>
      <% value.each do |val| %>
        <%if val.category == "video" %>
          <iframe width="100%" height="500px" src='<%= val.link%>' frameborder="0" allowfullscreen></iframe>
        <%else%>
          <h3><%= link_to val.title, url_for(val.link)%></h3>
        <%end%>
      <% end %>
    </div>
  <% end %>
</div>

